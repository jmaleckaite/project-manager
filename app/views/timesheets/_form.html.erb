<%= simple_form_for(@timesheet) do |f| %>
  <% if @timesheet.errors.any? %>
<ul>
  <% @timesheet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

	<% if !current_user.team_id.blank? %>
   <div class="field">
   	<div class="control">
   		<%= f.input :date, input_html: { class: "date" }, wrapper: false, label_html: { class: "label"} %>
   	</div>
   </div>
   <div class="field">
   	<div class="control">
   		<%= f.input :hours, input_html: { class: "time" }, wrapper: false, label_html: { class: "label"} %>
     </div>
   </div>

   <div class="field">
   	<div class="control">
   		<%= f.button :submit, class: "button is-link" %>
   	</div>
   </div>
<% end %>
<% end %>
